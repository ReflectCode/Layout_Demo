<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_V_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Linear Layout demo"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1-1" />

    <Button
        android:id="@+id/button_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 2-1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/layout_H_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#12AAFF"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Button 3-1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/button_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="Button 3-2" />

        <Button
            android:id="@+id/button_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="CheckBox 3-3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_V_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCBBFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Button 4-1" />

        <Button
            android:id="@+id/button_4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right|center_vertical"
            android:text="Button 4-2" />

        <LinearLayout
            android:id="@+id/layout_H_4_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCC22"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4_3_1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="top|left"
                android:text="Btn 4-3-1" />

            <Button
                android:id="@+id/button_4_3_2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="top|right"
                android:text="Btn 4-3-2" />

            <Button
                android:id="@+id/button_4_3_3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="bottom|right"
                android:text="Btn 4-3-3" />

            <Button
                android:id="@+id/button_4_3_4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="bottom|left"
                android:text="Btn 4-3_4" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>


